{
  "name": "request3",
  "description": "Simplified HTTP request client.",
  "keywords": [
    "http",
    "simple",
    "util",
    "utility"
  ],
  "version": "1.0.0",
  "author": "Mikeal Rogers <mikeal.rogers@gmail.com>",
  "contributors": [
    "Sergey Bakulin <sergey.bakulin.github@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/request3.git"
  },
  "bugs": {
    "url": "http://github.com/vansergen/request3/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "main": "index.js",
  "files": [
    "lib/",
    "index.js",
    "request.js"
  ],
  "dependencies": {
    "aws-sign2": "^0.7.0",
    "aws4": "^1.9.1",
    "caseless": "^0.12.0",
    "combined-stream": "^1.0.8",
    "extend": "^3.0.2",
    "form-data": "^3.0.0",
    "har-validator": "^5.1.3",
    "http-signature": "^1.3.1",
    "is-typedarray": "^1.0.0",
    "json-stringify-safe": "^5.0.1",
    "mime-types": "^2.1.26",
    "oauth-sign": "^0.9.0",
    "performance-now": "^2.1.0",
    "qs": "^6.9.2",
    "tough-cookie": "^3.0.1",
    "tunnel-agent": "^0.6.0",
    "uuid": "^3.4.0"
  },
  "scripts": {
    "fresh-install": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .js ./",
    "lint-fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run prettier && npm run lint && npm test && npm run test-browser",
    "prettier": "prettier -c \"**/*.{js,md,ts,json}\"",
    "prettier-write": "npm run prettier -- --write",
    "coverage": "nyc npm test && nyc report --reporter=lcov",
    "coverage-ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "test": "mocha --ui tdd **/*.spec.js",
    "test-browser": "node test/browser/start.js"
  },
  "devDependencies": {
    "bluebird": "^3.7.2",
    "browserify": "^16.5.0",
    "browserify-istanbul": "^3.0.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "karma": "^4.4.1",
    "karma-browserify": "^7.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "homepage": "https://github.com/vansergen/request3#readme",
  "directories": {
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/21b1a343-356f-4682-b1c2-9999240ee09f"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "npm run prettier-write",
      "git add"
    ],
    "*.{ts,js}": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
